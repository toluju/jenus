<h1>Listing people</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Middle names</th>
    <th>House name</th>
    <th>Title</th>
    <th>Gender</th>
    <th>Birth date</th>
    <th>Death date</th>
    <th>Description</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.first_name %></td>
    <td><%=h person.last_name %></td>
    <td><%=h person.middle_names %></td>
    <td><%=h person.house_name %></td>
    <td><%=h person.title %></td>
    <td><%=h person.gender %></td>
    <td><%=h person.birth_date %></td>
    <td><%=h person.death_date %></td>
    <td><%=h person.description %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

